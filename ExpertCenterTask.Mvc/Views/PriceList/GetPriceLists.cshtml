@model List<PriceListDto>

@{
    ViewData["Title"] = "PriceLists";
}

<h2>Прайсы</h2>

<a class="btn btn-primary" asp-action="CreatePriceList">+ Добавить прайс лист</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-route-id="@item.Id" asp-action="GetPriceList">@Html.DisplayFor(modelItem => item.Id)</a>
                </td>
                <td>@item.Title</td>
            </tr>
        }
    </tbody>
</table>
