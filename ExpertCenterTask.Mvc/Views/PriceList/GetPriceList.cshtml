@model PriceListDetailDto

@{
    ViewData["Title"] = "PriceListDetail";
}

<h1>@Model.Title</h1>

<a class="btn btn-primary" asp-action="CreateProduct">+ Добавить продукт в прайс лист</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>ProductTitle</th>
            <th>ProductArcticle</th>

            @foreach (var item in Model.Columns)
            {
                <th>@item.Title</th>
            }

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Title</td>
            <td>@Model.ProductTitle</td>
            <td>@Model.ProductArcticle</td>

            @foreach (var item in Model.Columns)
            {
                <td>@item.Value</td>
            }


        </tr>
    </tbody>
</table>